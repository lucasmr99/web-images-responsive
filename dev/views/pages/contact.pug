extends ../templates/template 
block menu
    - pageActive = 'contact'
    include ../includes/main-menu
block title
    h1.title Contact
block main
    .contact    
        .contact__form
            form.form-contact
                .form-contact__fields
                    input(type="text" name="name" placeHolder="name").form-contact__input
                    input(type="text" name="email" placeHolder="email").form-contact__input
                    input(type="text" name="subjet" placeHolder="subjet").form-contact__input
                .form-contact__field
                    textarea(name="message" placeHolder="message").form-contact__textarea
            .form-contact__field
                input(type="submit" value="Send").form__submit
        .contact__map
            iframe(src='https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d14423.042094610562!2d-57.60991049999999!3d-25.34581575!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1ses!2spy!4v1588515319140!5m2!1ses!2spy' frameborder='0', style='border:0;', allowfullscreen='')
            a(href="https://www.google.es/maps/place/Madrid/@40.4379332,-3.7495761,12z/data=!3m1!4b1!4m5!3m4!1s0xd422997800a3c81:0xc436dec1618c2269!8m2!3d40.4167754!4d-3.7037902" target="_blank")
                img(src="assets/map.png" alt="").contact__img-map
        .social
            .social__icon
                i.fab.fa-twitter-square
                i.fab.fa-twitter-square
            .social__icon
                i.fab.fa-instagram
                i.fab.fa-instagram
            .social__icon
                i.fab.fa-youtube-square
                i.fab.fa-youtube-square
            .social__icon
                i.fab.fa-pinterest-square
                i.fab.fa-pinterest-square